{
  "mode": "live_trading",
  "coinbase_api": {
    "base_url": "https://api.coinbase.com"
  },
  "tickers_to_watch": [ "BTC-USD", "ETH-USD", "XRP-USD" ],
  "account": {
    "trade_allocation_usd": 20.00
  },
  "buy_rules": [
    {
      "id": "buy_on_lower_bb_cross_40_2",
      "description": "Buy if price crosses below or touches the lower Bollinger Band (20-period, 2 StdDev).",
      "type": "bollinger_lower_band_cross",
      "params": {
        "period": 40,
        "std_dev_multiplier": 2.0
      }
    }
  ],
  "sell_rules": [
    {
      "id": "sell_on_5pct_profit",
      "description": "Sell if price is 5% or more above the purchase price.",
      "type": "profit_percentage_target",
      "params": {
        "percentage_above_purchase": 7.0
      }
    }
  ],
  "polling_intervals": {
    "main_loop_minutes": 1,
    "order_status_check_minutes": 5
  },
  "trade_cooldown_minutes": 15,
  "influxdb": {
    "url": "http://192.168.1.53:8086",
    "org": "deremworks",
    "bucket": "market_data",
    "price_measurement": "spot_price",
    "trade_events_bucket": "trade_logs",
    "trade_events_measurement": "trading_events"
  },
  "logging": {
    "level": "info"
  }
}