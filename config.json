{
  "mode": "live_trading",
  "coinbase_api": {
    "base_url": "https://api.coinbase.com"
  },
  "tickers_to_watch": [ "BTC-USD", "ETH-USD", "XRP-USD" ],
  "account": {
    "trade_allocation_usd": 20.00
  },
  "buy_rules": [
    {
      "id": "7% dip from sma",
      "description": "Buy if price drops 7% from sma",
      "type": "sma_dip_percentage",
      "params": {
        "sma_days": 1,
        "percentage_below_sma": 7
      }
    }
  ],
  "sell_rules": [
    {
      "id": "sell_on_5pct_profit",
      "description": "Sell if price is 5% or more above the purchase price.",
      "type": "profit_percentage_target",
      "params": {
        "percentage_above_purchase": 5.0
      }
    }
  ],
  "polling_intervals": {
    "main_loop_minutes": 1,
    "order_status_check_minutes": 5
  },
  "trade_cooldown_minutes": 60,
  "influxdb": {
    "url": "http://192.168.1.53:8086",
    "org": "deremworks",
    "bucket": "market_data",
    "price_measurement": "spot_price",
    "trade_events_bucket": "trade_logs",
    "trade_events_measurement": "trading_events"
  },
  "logging": {
    "level": "info"
  }
}